{
  "manifest_version": 2,

  "name": "Printable Editorial",
  "short_name": "TC printable",
  "description": "Format an editorial page",
  "version": "0.0.4",

  "permissions": [
    "contextMenus",
    "*://apps.topcoder.com/*",
    "*://community.topcoder.com/*problem_statement*"
  ],

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "background": {
    "scripts": [
      "context.js"
    ]
  },

  "content_scripts": [
    {
      "matches": [
        "*://apps.topcoder.com/*",
        "*://community.topcoder.com/*problem_statement*"
      ],
      "js": [
        "format.js"
      ]
    }
  ]
}